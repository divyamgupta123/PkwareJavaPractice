<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">  
<hibernate-configuration> 
    <session-factory>  
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/passmanager</property>
        <property name = "hibernate.connection.username">postgres</property>
        <property name = "hibernate.connection.password">root</property>
        <property name = "hibernate.connection.poolsize">3</property>
        <property name = "hibernate.connection.show_sql">true</property>
        <mapping class = "HibernatePractice.model.User" ></mapping>
    </session-factory>  
</hibernate-configuration>  