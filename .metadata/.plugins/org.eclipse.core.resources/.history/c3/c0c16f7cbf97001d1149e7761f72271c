
public class test {

	public static void main(String[] args) {
		
		int distance;
		int days;
		int seconds;
		int speed = 18600;
		days = 1000;
		
		seconds = days*24*60*60;
	
		distance = speed*seconds;
		System.out.println(seconds);
		System.out.println("In "+days+" light travels "+distance+" miles");
		
		
	}

}
